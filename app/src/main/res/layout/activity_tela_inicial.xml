<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="sistemaderma.ifpi.edu.br.sistemaderma.TelaInicial">

    <TextView
        android:id="@+id/bemVindo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bem Vindo(a),"
        android:textSize="20dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/novaSolicitacao"
        android:gravity="center"
        android:textSize="20dp"
        android:onClick="novaSolicitacao"
        android:drawableLeft="@drawable/solicitacao"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/black"
        android:paddingBottom="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/verSolicitacoes"
        android:textSize="20dp"
        android:drawableLeft="@drawable/lupa"
        android:gravity="center"
        android:onClick="verSolicitacoes"
        android:textColor="@android:color/black"
        />
</LinearLayout>
